#Configuration of NeoMutt by Fernando


set realname='Fernando Chiquito'
set from = "fernando.chiquito@gmail.com"
set imap_user = "fernando.chiquito@gmail.com"
set imap_pass = "xxxx"

##REMOTE GMAIL FOLDERS
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed ="Drafts"
set trash = "Trash"
set record ="Sent Mail"


##SMTP Settings to sent email
set smtp_url = "smtp://fernando.chiquito@smtp.gmail.com:587/"
set smtp_pass = "xxxx"


##LOCAL FOLDERS FOR CACHED HEADERS AND CERTIFICATES
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates

##SECURING
set move = no  #Stop asking to "move read messages to mbox"!
set imap_keepalive = 900

##Sort by newest conversation first.
set sort = reverse-threads
set sort_aux = last-date-received

#Geral configuration.
set askcc
set attribution="On %d or thereabouts, %n wrote:"
set copy=yes
set editor=vim
unset mark_old
set forward_format="Fwd: %s"
set quit=ask-yes
